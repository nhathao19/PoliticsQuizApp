<Window x:Class="PoliticsQuizApp.WPF.ExamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PoliticsQuizApp.WPF"
        Title="Thi Trắc Nghiệm" 
        WindowState="Maximized" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        Topmost="True" 
        ShowInTaskbar="False"
        Height="700" Width="1000"
        FontFamily="Segoe UI" Background="#F3F4F6">

    <Window.Resources>
        <!-- Style cho Nút điều hướng câu hỏi (Tròn) -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="25">
                            <!-- Bo tròn hoàn toàn -->
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#D1D5DB"/>
                            </Trigger>
                            <!-- Logic màu sắc theo trạng thái (Binding) -->
                            <DataTrigger Binding="{Binding IsAnswered}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#DCFCE7"/>
                                <!-- Xanh lá nhạt -->
                                <Setter TargetName="border" Property="BorderBrush" Value="#22C55E"/>
                                <Setter Property="Foreground" Value="#15803D"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsFlagged}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FEF3C7"/>
                                <!-- Vàng nhạt -->
                                <Setter TargetName="border" Property="BorderBrush" Value="#F59E0B"/>
                                <Setter Property="Foreground" Value="#B45309"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2563EB"/>
                                <!-- Xanh dương đậm -->
                                <Setter TargetName="border" Property="BorderBrush" Value="#2563EB"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho Nút Chuyển câu (Prev/Next) -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Nội dung câu hỏi -->
            <ColumnDefinition Width="320"/>
            <!-- Sidebar thông tin -->
        </Grid.ColumnDefinitions>

        <!-- === LEFT: QUESTION CONTENT === -->
        <Border Grid.Column="0" Margin="30,30,20,30" Background="White" CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Color="Black" Opacity="0.05" ShadowDepth="0"/>
            </Border.Effect>

            <!-- ĐÃ THÊM x:Name="gridQuestionContent" VÀO ĐÂY ĐỂ SỬA LỖI -->
            <Grid x:Name="gridQuestionContent" Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Title Câu hỏi -->
                    <RowDefinition Height="*"/>
                    <!-- Nội dung & Đáp án -->
                    <RowDefinition Height="Auto"/>
                    <!-- Footer Actions -->
                </Grid.RowDefinitions>

                <!-- 1. Header Câu hỏi -->
                <Border Grid.Row="0" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,0,0,20" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#2563EB" CornerRadius="6" Padding="12,6">
                            <TextBlock Text="{Binding Index, StringFormat='Câu {0}'}" 
                                       FontSize="18" FontWeight="Bold" Foreground="White"/>
                        </Border>
                        <!-- Flag Checkbox nằm ngay cạnh tiêu đề -->
                        <CheckBox x:Name="chkFlag" Content="Đánh dấu xem lại" IsChecked="{Binding IsFlagged, Mode=TwoWay}"
                                  Margin="20,0,0,0" VerticalAlignment="Center" FontSize="14" Foreground="#D97706" Cursor="Hand"
                                  ToolTip="Đánh dấu câu hỏi này nếu bạn chưa chắc chắn">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                            </CheckBox.LayoutTransform>
                        </CheckBox>
                    </StackPanel>
                </Border>

                <!-- 2. Nội dung & Đáp án (Scroll được) -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,15,0">
                    <StackPanel>
                        <!-- Nội dung câu hỏi -->
                        <RichTextBox IsReadOnly="True" 
             Background="Transparent" 
             BorderThickness="0" 
             IsDocumentEnabled="True"
             local:RichTextHelper.FormattedText="{Binding QuestionData.Content}">
                            <RichTextBox.Resources>
                                <Style TargetType="{x:Type Paragraph}">
                                    <Setter Property="Margin" Value="0"/>
                                </Style>
                            </RichTextBox.Resources>
                        </RichTextBox>

                        <!-- Khu vực đáp án (Được Render Dynamic từ Code-behind) -->
                        <StackPanel x:Name="pnlAnswers"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- 3. Footer Navigation -->
                <Grid Grid.Row="2" Margin="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Câu trước" Click="BtnPrev_Click"
                            Width="120" Background="White" Foreground="#4B5563" BorderBrush="#D1D5DB" BorderThickness="1"
                            Style="{StaticResource ActionButtonStyle}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="8">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Path Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" Fill="#4B5563" Width="12" Height="12" Stretch="Uniform" Margin="0,0,8,0"/>
                                        <TextBlock Text="Câu trước"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="2" Content="Câu sau" Click="BtnNext_Click"
                            Width="120" Background="#2563EB" Foreground="White"
                            Style="{StaticResource ActionButtonStyle}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="Câu sau"/>
                                        <Path Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" Fill="White" Width="12" Height="12" Stretch="Uniform" Margin="8,0,0,0"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- === RIGHT: SIDEBAR INFO === -->
        <Border Grid.Column="1" Background="White" BorderBrush="#E5E7EB" BorderThickness="1,0,0,0">
            <Grid Margin="20,30,20,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Info Thí sinh -->
                    <RowDefinition Height="Auto"/>
                    <!-- Đồng hồ -->
                    <RowDefinition Height="Auto"/>
                    <!-- Tiến độ -->
                    <RowDefinition Height="*"/>
                    <!-- Navigator Grid -->
                    <RowDefinition Height="Auto"/>
                    <!-- Nút Nộp bài -->
                </Grid.RowDefinitions>

                <!-- 1. Info -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" 
                              Fill="#6B7280" Width="20" Height="20" Stretch="Uniform" Margin="0,0,10,0"/>
                        <TextBlock Text="Thông Tin Thí Sinh" FontSize="14" FontWeight="Bold" Foreground="#374151" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border Background="#F9FAFB" CornerRadius="8" Padding="15">
                        <StackPanel>
                            <!-- Tên thí sinh: Đã thêm x:Name để code-behind có thể tìm và gán tên -->
                            <TextBlock x:Name="lblStudentName" Text="Nguyễn Văn A" FontWeight="Bold" Foreground="#111827" FontSize="16" Margin="0,0,0,2"/>

                            <!-- Tên đề thi: Đã thêm x:Name để code-behind có thể tìm và gán tên -->
                            <TextBlock x:Name="lblExamTitle" Text="Đề thi Trắc nghiệm" Foreground="#6B7280" FontSize="13"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- 2. Đồng hồ đếm ngược -->
                <Border Grid.Row="1" Background="#FEF2F2" BorderBrush="#FECACA" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,25">
                    <StackPanel HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                            <Path Data="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" 
                                  Fill="#DC2626" Width="14" Height="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Thời gian còn lại" FontSize="13" Foreground="#991B1B" FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock x:Name="lblTimer" Text="45:00" FontSize="36" FontWeight="Bold" Foreground="#DC2626" HorizontalAlignment="Center" FontFamily="Consolas, Monospace"/>
                    </StackPanel>
                </Border>

                <!-- 3. Tiến độ -->
                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <Grid Margin="0,0,0,5">
                        <TextBlock Text="Tiến độ hoàn thành" FontSize="13" Foreground="#4B5563"/>
                        <TextBlock x:Name="lblProgress" Text="0/10" HorizontalAlignment="Right" FontSize="13" FontWeight="Bold" Foreground="#2563EB"/>
                    </Grid>
                    <ProgressBar x:Name="prgBar" Height="8" Minimum="0" Maximum="10" Value="0" BorderThickness="0">
                        <ProgressBar.Foreground>
                            <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                <GradientStop Color="#A8DF8E" Offset="0"/>
                                <GradientStop Color="#75B06F" Offset="1"/>
                            </LinearGradientBrush>
                        </ProgressBar.Foreground>
                        <ProgressBar.Background>
                            <SolidColorBrush Color="#E5E7EB"/>
                        </ProgressBar.Background>
                    </ProgressBar>
                </StackPanel>

                <!-- 4. Navigator Grid (Danh sách câu hỏi) -->
                <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="icNavigator">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Index}" 
                                        Click="BtnQuestionNav_Click" Tag="{Binding}"
                                        Style="{StaticResource NavButtonStyle}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- 5. Nộp bài -->
                <Button Grid.Row="4" Content="NỘP BÀI THI" Click="BtnSubmit_Click" 
                        Height="55" Margin="0,20,0,0" Background="#DC2626" Foreground="White" 
                        FontSize="16" FontWeight="Bold" Cursor="Hand"
                        ToolTip="Nhấn để kết thúc bài thi">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Path Data="M9,16.17L4.83,12L3.41,13.41L9,19L21,7L19.59,5.59L9,16.17Z" Fill="White" Width="18" Height="18" Margin="0,0,10,0"/>
                                    <ContentPresenter/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#B91C1C"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>