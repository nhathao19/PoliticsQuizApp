<Window x:Class="PoliticsQuizApp.WPF.AddTopicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Chương Mới" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Nhập tên chương mới:" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBox x:Name="txtTopicName" Height="35" Padding="5" VerticalContentAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Hủy" IsCancel="True" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="Lưu" Click="BtnSave_Click" IsDefault="True" Width="80" Height="30" Background="#2563EB" Foreground="White"/>
        </StackPanel>
    </StackPanel>
</Window>