<Window x:Class="PoliticsQuizApp.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard - Hệ thống Quản lý Thi Trắc Nghiệm" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI" Background="#F3F4F6">

    <Window.Resources>
        <Style x:Key="DashboardBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F0F9FF"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2563EB" Padding="20">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🎓 DASHBOARD QUẢN TRỊ" FontSize="22" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
                <Button Click="BtnLogout_Click" HorizontalAlignment="Right" Content="Đăng xuất" 
                        Background="Transparent" BorderThickness="0" Foreground="White" 
                        FontWeight="SemiBold" Cursor="Hand"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Click="BtnOpenManager_Click" Style="{StaticResource DashboardBtnStyle}">
                <StackPanel>
                    <TextBlock Text="📂" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Quản Lý Theo Chương" FontWeight="Bold" Foreground="#374151" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                    <TextBlock Text="Soạn câu hỏi, Thêm chương" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="0" Grid.Column="1" Click="BtnExamConfig_Click" Style="{StaticResource DashboardBtnStyle}">
                <StackPanel>
                    <TextBlock Text="📝" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Cấu Hình Đề Thi" FontWeight="Bold" Foreground="#374151" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                    <TextBlock Text="Danh sách đề thi thủ công" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="0" Grid.Column="2" Click="BtnCreateExam_Click" Style="{StaticResource DashboardBtnStyle}">
                <StackPanel>
                    <TextBlock Text="⚡" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Tạo Đề Ma Trận" FontWeight="Bold" Foreground="#374151" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                    <TextBlock Text="Sinh đề ngẫu nhiên tự động" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="1" Grid.Column="0" Click="BtnImportExcel_Click" Style="{StaticResource DashboardBtnStyle}">
                <StackPanel>
                    <TextBlock Text="📊" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Import Excel" FontWeight="Bold" Foreground="#374151" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                    <TextBlock Text="Nhập câu hỏi hàng loạt" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="1" Grid.Column="1" Click="BtnReport_Click" Style="{StaticResource DashboardBtnStyle}">
                <StackPanel>
                    <TextBlock Text="🏆" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Xem Kết Quả Thi" FontWeight="Bold" Foreground="#374151" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                    <TextBlock Text="Báo cáo điểm số sinh viên" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="1" Grid.Column="2" Click="BtnUserMgmt_Click" Style="{StaticResource DashboardBtnStyle}">
                <StackPanel>
                    <TextBlock Text="👥" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Quản Lý Người Dùng" FontWeight="Bold" Foreground="#374151" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                    <TextBlock Text="Thêm/Sửa/Xóa Sinh viên" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>

        <Border Grid.Row="2" Background="White" Margin="20,0,20,20" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Kho Câu Hỏi (Tra Cứu Nhanh)" FontSize="16" FontWeight="Bold" Foreground="#374151" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="+ Thêm Lẻ" Click="BtnAddQuestion_Click" Padding="10,5" Background="#10B981" Foreground="White" FontWeight="Bold" BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="Tải Lại" Click="BtnRefresh_Click" Padding="10,5" Margin="5,0,0,0" Background="White" BorderBrush="#D1D5DB" BorderThickness="1"/>
                    </StackPanel>
                </Grid>

                <DataGrid x:Name="dgQuestions" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                          CanUserAddRows="False" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" RowHeight="35">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding QuestionData.QuestionID}" Width="50"/>
                        <DataGridTextColumn Header="Nội dung" Binding="{Binding QuestionData.Content}" Width="*"/>
                        <DataGridTextColumn Header="Chương" Binding="{Binding QuestionData.Topic.TopicName}" Width="150"/>

                        <DataGridTemplateColumn Header="Tác vụ" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Click="BtnEditQuestion_Click" Tag="{Binding QuestionData.QuestionID}" Content="✏️" Background="Transparent" BorderThickness="0" Margin="0,0,5,0" Cursor="Hand"/>
                                        <Button Click="BtnDeleteQuestion_Click" Tag="{Binding QuestionData.QuestionID}" Content="❌" Background="Transparent" BorderThickness="0" Cursor="Hand"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>