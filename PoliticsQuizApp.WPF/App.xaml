<Application x:Class="PoliticsQuizApp.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PoliticsQuizApp.WPF"
             StartupUri="StudentHomeWindow.xaml">
    <Application.Resources>
        <Style x:Key="AnswerCardStyle" TargetType="RadioButton">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bdr" 
                            BorderBrush="#E0E0E0" BorderThickness="2" 
                            Background="White" CornerRadius="8" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border x:Name="dotBorder" Width="20" Height="20" CornerRadius="10" 
                                    BorderBrush="#BDBDBD" BorderThickness="2" Background="White" 
                                    VerticalAlignment="Top" Margin="0,4,0,0"/>
                                <Ellipse x:Name="dot" Width="10" Height="10" Fill="#007ACC" 
                                     VerticalAlignment="Top" Margin="5,9,0,0" Visibility="Collapsed"/>

                                <ContentPresenter Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"
                                              TextBlock.FontSize="16" TextBlock.LineHeight="24"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#F5F9FF"/>
                                <Setter TargetName="bdr" Property="BorderBrush" Value="#64B5F6"/>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bdr" Property="BorderBrush" Value="#007ACC"/>
                                <Setter TargetName="bdr" Property="Background" Value="#E3F2FD"/>
                                <Setter TargetName="bdr" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="dotBorder" Property="BorderBrush" Value="#007ACC"/>
                                <Setter TargetName="dot" Property="Visibility" Value="Visible"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
