<Window x:Class="PoliticsQuizApp.WPF.GenerateExamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tạo Đề Thi Ma Trận (Ngẫu Nhiên)" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Background="#F3F4F6">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="White" Padding="20" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <TextBlock Text="THIẾT LẬP CẤU TRÚC ĐỀ THI" FontSize="20" FontWeight="Bold" Foreground="#111827"/>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Mã Đề" FontWeight="Bold"/>
                <TextBox x:Name="txtExamCode" Height="35" Padding="5" Text="POLI_AUTO_01"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10,0">
                <TextBlock Text="Tên Đề Thi" FontWeight="Bold"/>
                <TextBox x:Name="txtExamTitle" Height="35" Padding="5" Text="Thi Cuối Kỳ"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                <TextBlock Text="Thời Gian (Phút)" FontWeight="Bold"/>
                <TextBox x:Name="txtDuration" Height="35" Padding="5" Text="60"/>
            </StackPanel>
        </Grid>

        <DataGrid x:Name="dgTopics" Grid.Row="2" Margin="20,0,20,20" AutoGenerateColumns="False" CanUserAddRows="False" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Chương / Chủ Đề" Binding="{Binding TopicName}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Kho hiện có" Binding="{Binding TotalAvailable}" Width="150" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Số câu cần lấy" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding CountToSelect, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="3" Background="White" Padding="20" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="txtTotalSelected" Text="Tổng số câu: 0" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,20,0" Foreground="Blue"/>
                <Button Content="TẠO ĐỀ NGAY" Click="BtnGenerate_Click" Width="150" Height="40" Background="#2563EB" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>