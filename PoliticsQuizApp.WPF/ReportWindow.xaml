<Window x:Class="PoliticsQuizApp.WPF.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Báo Cáo Và Thống Kê Kết Quả" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI" Background="#F3F4F6">

    <Window.Resources>
        <!-- Style cho Input Wrapper -->
        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <!-- Style cho TextBox bên trong -->
        <Style TargetType="TextBox" x:Key="InnerInputStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Style cho DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
        </Style>

        <!-- Style cho Button Toolbar -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header & Stats -->
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- 1. Header & Quick Stats -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Báo Cáo Kết Quả Thi" FontSize="24" FontWeight="Bold" Foreground="#111827"/>
                <TextBlock Text="Thống kê điểm số và lịch sử bài làm" FontSize="14" Foreground="#6B7280" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Card Stats (Demo tĩnh - bạn có thể bind dữ liệu thật sau này) -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Border Background="White" CornerRadius="8" Padding="15,10" Margin="10,0,0,0" BorderBrush="#E5E7EB" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Tổng Bài Thi" FontSize="12" Foreground="#6B7280"/>
                        <TextBlock x:Name="txtTotalExams" Text="0" FontSize="18" FontWeight="Bold" Foreground="#2563EB" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="8" Padding="15,10" Margin="10,0,0,0" BorderBrush="#E5E7EB" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Điểm T.Bình" FontSize="12" Foreground="#6B7280"/>
                        <TextBlock x:Name="txtAvgScore" Text="0.00" FontSize="18" FontWeight="Bold" Foreground="#059669" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- 2. Filters & Toolbar -->
        <Border Grid.Row="1" Background="White" Padding="15" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Border Style="{StaticResource InputBorderStyle}" Width="300" Margin="0,0,10,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Path Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" 
                                  Fill="#9CA3AF" Width="18" Height="18" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtSearch" Grid.Column="1" Style="{StaticResource InnerInputStyle}" 
                                     ToolTip="Nhập tên sinh viên hoặc mã đề..." />
                        </Grid>
                    </Border>

                    <Button Click="BtnSearch_Click" Style="{StaticResource ToolbarButtonStyle}" 
                            Background="#2563EB" Foreground="White" BorderThickness="0" Width="100">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tìm kiếm"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Actions Right -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Click="BtnReload_Click" Style="{StaticResource ToolbarButtonStyle}" 
                            Background="White" Foreground="#4B5563" BorderBrush="#D1D5DB" BorderThickness="1" ToolTip="Tải lại dữ liệu">
                        <Path Data="M12,18A6,6 0 0,1 6,12C6,11 6.25,10.03 6.7,9.2L5.24,7.74C4.46,8.97 4,10.43 4,12A8,8 0 0,0 12,20V23L16,19L12,15V18M12,4V1L8,5L12,9V6A6,6 0 0,1 18,12C18,13 17.75,13.97 17.3,14.8L18.76,16.26C19.54,15.03 20,13.57 20,12A8,8 0 0,0 12,4Z" 
                              Fill="#4B5563" Width="16" Height="16" Stretch="Uniform"/>
                    </Button>

                    <Button Click="BtnExport_Click" Style="{StaticResource ToolbarButtonStyle}" 
                            Background="#10B981" Foreground="White" BorderThickness="0" Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M15.2,20H13.8L12,16.8L10.2,20H8.8L11.2,16L9,12.5H10.4L12,15.1L13.6,12.5H15L12.8,16L15.2,20Z" 
                                  Fill="White" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Xuất Excel"/>
                        </StackPanel>
                    </Button>

                    <Button Click="BtnDeleteAll_Click" Style="{StaticResource ToolbarButtonStyle}" 
                            Background="#EF4444" Foreground="White" BorderThickness="0" Margin="10,0,0,0" 
                            ToolTip="CẢNH BÁO: Xóa toàn bộ dữ liệu kết quả thi">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" 
                                  Fill="White" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Xóa Tất Cả"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 3. DataGrid Results -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Color="Black" Opacity="0.05" ShadowDepth="2"/>
            </Border.Effect>

            <DataGrid x:Name="dgResults" Margin="5" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" GridLinesVisibility="Horizontal">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="MSSV" Binding="{Binding StudentId}" Width="100" Foreground="#6B7280"/>

                    <DataGridTextColumn Header="Họ và Tên" Binding="{Binding StudentName}" Width="200">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#111827"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Mã Đề" Binding="{Binding ExamCode}" Width="100"/>

                    <DataGridTextColumn Header="Tên Đề Thi" Binding="{Binding ExamTitle}" Width="*"/>

                    <!-- Điểm số (Tô màu theo mức điểm) -->
                    <DataGridTextColumn Header="Điểm" Binding="{Binding Score, StringFormat={}{0:N2}}" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="15"/>
                                <!-- Logic màu sắc -->
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Score}" Value="10">
                                        <Setter Property="Foreground" Value="#059669"/>
                                        <!-- 10 điểm màu xanh lá đậm -->
                                    </DataTrigger>
                                    <!-- Bạn có thể thêm Converter để so sánh >8 hoặc <5 nếu muốn logic phức tạp hơn -->
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Thời gian nộp" Binding="{Binding StartTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="160" Foreground="#6B7280"/>

                    <DataGridTemplateColumn Header="Chi tiết" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Click="BtnViewDetail_Click" Tag="{Binding SessionID}"
                                        Width="80" Height="30" Background="Transparent" BorderBrush="#2563EB" BorderThickness="1" 
                                        Foreground="#2563EB" Content="Xem bài" Cursor="Hand" FontSize="12" FontWeight="SemiBold">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Xóa" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Click="BtnDeleteSingle_Click" Tag="{Binding SessionID}"
                                        Width="30" Height="30" Background="Transparent" BorderThickness="0" 
                                        Cursor="Hand" ToolTip="Xóa kết quả này">
                                    <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" 
                                          Fill="#EF4444" Width="16" Height="16" Stretch="Uniform"/>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- 4. Footer -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Click="BtnClose_Click" Content="Đóng" Width="100" Height="40"
                    Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Foreground="#374151" 
                    FontWeight="SemiBold" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>