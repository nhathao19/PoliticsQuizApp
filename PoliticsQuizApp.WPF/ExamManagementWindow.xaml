<Window x:Class="PoliticsQuizApp.WPF.ExamManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Quản Lý Và Cấu Hình Đề Thi" Height="650" Width="1100" 
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI" Background="#F3F4F6">

    <Window.Resources>
        <!-- Style cho Label -->
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Style cho Input Wrapper -->
        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Style cho TextBox/ComboBox bên trong -->
        <Style TargetType="Control" x:Key="InnerInputStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <!-- Style cho DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <!-- Cột trái: Form cấu hình -->
            <ColumnDefinition Width="20"/>
            <!-- Khoảng cách -->
            <ColumnDefinition Width="*"/>
            <!-- Cột phải: Danh sách -->
        </Grid.ColumnDefinitions>

        <!-- === LEFT COLUMN: FORM CẤU HÌNH === -->
        <Border Grid.Column="0" Background="White" CornerRadius="12" BorderBrush="#E5E7EB" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Color="Black" Opacity="0.05" ShadowDepth="2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="*"/>
                    <!-- Form Body -->
                    <RowDefinition Height="Auto"/>
                    <!-- Button -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="20">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.33 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.33 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" 
                              Fill="#2563EB" Width="24" Height="24" Stretch="Uniform" Margin="0,0,10,0"/>
                        <TextBlock Text="Cấu Hình Ma Trận Đề" FontSize="18" FontWeight="Bold" Foreground="#111827" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Body -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <!-- Mã đề -->
                        <TextBlock Text="Mã đề thi" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <TextBox x:Name="txtExamCode" Style="{StaticResource InnerInputStyle}" FontWeight="Bold" ToolTip="Ví dụ: GK_001"/>
                        </Border>

                        <!-- Tiêu đề -->
                        <TextBlock Text="Tên đề thi" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <TextBox x:Name="txtTitle" Style="{StaticResource InnerInputStyle}" ToolTip="Ví dụ: Kiểm tra giữa kỳ"/>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Chủ đề -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Phạm vi kiến thức" Style="{StaticResource LabelStyle}"/>
                                <Border Style="{StaticResource InputBorderStyle}">
                                    <ComboBox x:Name="cboTopics" Style="{StaticResource InnerInputStyle}" 
                                              DisplayMemberPath="TopicName" SelectedValuePath="TopicId"/>
                                </Border>
                            </StackPanel>

                            <!-- Thời gian -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Thời gian (Phút)" Style="{StaticResource LabelStyle}"/>
                                <Border Style="{StaticResource InputBorderStyle}">
                                    <TextBox x:Name="txtDuration" Style="{StaticResource InnerInputStyle}" Text="45" HorizontalContentAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Group Số lượng câu hỏi -->
                        <Border Background="#F9FAFB" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Padding="15" Margin="0,5,0,20">
                            <StackPanel>
                                <TextBlock Text="Cấu trúc đề thi" FontWeight="Bold" Foreground="#4B5563" Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Dễ -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Dễ" Foreground="#059669" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                        <Border Background="White" BorderBrush="#059669" BorderThickness="1" CornerRadius="6" Height="40">
                                            <TextBox x:Name="txtEasy" Text="0" TextChanged="CalculateTotal_TextChanged"
                                                     FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Trung bình -->
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Trung bình" Foreground="#D97706" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                        <Border Background="White" BorderBrush="#D97706" BorderThickness="1" CornerRadius="6" Height="40">
                                            <TextBox x:Name="txtMedium" Text="0" TextChanged="CalculateTotal_TextChanged"
                                                     FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Khó -->
                                    <StackPanel Grid.Column="4">
                                        <TextBlock Text="Khó" Foreground="#DC2626" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                        <Border Background="White" BorderBrush="#DC2626" BorderThickness="1" CornerRadius="6" Height="40">
                                            <TextBox x:Name="txtHard" Text="0" TextChanged="CalculateTotal_TextChanged"
                                                     FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>

                                <!-- Tổng cộng -->
                                <Border Margin="0,15,0,0" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Padding="0,10,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Tổng số câu hỏi:" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,5,0"/>
                                        <TextBlock x:Name="lblTotalQuestions" Text="0" FontWeight="Bold" FontSize="18" Foreground="#2563EB"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>

                <!-- Create Button -->
                <Button Grid.Row="2" Content="TẠO ĐỀ THI MỚI" Click="BtnAddExam_Click" 
                        Height="50" Margin="20" Background="#2563EB" Foreground="White" 
                        FontSize="16" FontWeight="Bold" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- === RIGHT COLUMN: DANH SÁCH ĐỀ THI === -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Danh Sách Đề Thi" FontSize="20" FontWeight="Bold" Foreground="#111827"/>
                <TextBlock Text="Quản lý trạng thái mở/đóng của các mã đề" FontSize="14" Foreground="#6B7280" Margin="0,5,0,0"/>
            </StackPanel>

            <Border Grid.Row="1" Background="White" CornerRadius="12" BorderBrush="#E5E7EB" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Color="Black" Opacity="0.05" ShadowDepth="2"/>
                </Border.Effect>

                <DataGrid x:Name="dgExams" Margin="5" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <!-- Mã -->
                        <DataGridTextColumn Header="Mã Đề" Binding="{Binding ExamCode}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#2563EB"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Tiêu đề -->
                        <DataGridTextColumn Header="Tiêu đề" Binding="{Binding Title}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Thời gian -->
                        <DataGridTextColumn Header="Phút" Binding="{Binding DurationMinutes}" Width="60"/>

                        <!-- Tổng câu -->
                        <DataGridTextColumn Header="Số câu" Binding="{Binding TotalQuestions}" Width="70">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Cấu trúc -->
                        <DataGridTextColumn Header="Dễ/TB/Khó" Binding="{Binding DifficultySummary}" Width="100"/>

                        <!-- Trạng thái -->
                        <DataGridCheckBoxColumn Header="Đang Mở" Binding="{Binding IsActive}" Width="80"/>

                        <!-- Thao tác -->
                        <DataGridTemplateColumn Header="Thao tác" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <!-- Toggle Status Button (Icon Switch/Power) -->
                                        <Button Click="BtnToggleStatus_Click" Tag="{Binding ExamId}" 
                                                Width="35" Height="35" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Bật/Tắt đề thi">
                                            <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M12,6A1,1 0 0,0 11,7V12A1,1 0 0,0 12,13A1,1 0 0,0 13,12V7A1,1 0 0,0 12,6M12,15A1,1 0 0,0 11,16V17A1,1 0 0,0 12,18A1,1 0 0,0 13,17V16A1,1 0 0,0 12,15Z" 
                                                  Fill="#F59E0B" Width="20" Height="20" Stretch="Uniform"/>
                                        </Button>

                                        <!-- Delete Button (Icon Trash) -->
                                        <Button Click="BtnDeleteExam_Click" Tag="{Binding ExamId}"
                                                Width="35" Height="35" Margin="5,0,0,0" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Xóa đề thi">
                                            <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" 
                                                  Fill="#EF4444" Width="18" Height="18" Stretch="Uniform"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>