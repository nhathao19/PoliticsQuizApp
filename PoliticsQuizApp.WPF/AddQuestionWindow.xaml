<Window x:Class="PoliticsQuizApp.WPF.AddQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Câu Hỏi Mới" Height="700" Width="650"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        FontFamily="Segoe UI" Background="#F9FAFB">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="Control" x:Key="InnerInputStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="20">
            <StackPanel Orientation="Horizontal">
                <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" Fill="#2563EB" Height="24" Width="24" Stretch="Uniform" Margin="0,0,10,0"/>
                <TextBlock Text="Thêm Mới Câu Hỏi" FontSize="20" FontWeight="Bold" Foreground="#111827" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Chủ đề / Chương" Style="{StaticResource LabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <ComboBox x:Name="cboTopics" Style="{StaticResource InnerInputStyle}" DisplayMemberPath="TopicName" SelectedValuePath="TopicId"/>
                            </Border>
                            <Border x:Name="borderNewTopic" Style="{StaticResource InputBorderStyle}" Visibility="Collapsed">
                                <TextBox x:Name="txtNewTopic" Style="{StaticResource InnerInputStyle}" ToolTip="Nhập tên chủ đề mới..."/>
                            </Border>
                            <Button x:Name="btnToggleTopic" Grid.Column="1" Click="BtnToggleTopic_Click" Width="40" Height="40" Margin="10,0,0,0" Background="#E0F2FE" BorderThickness="0" Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </Button.Resources>
                                <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" Fill="#0284C7" Width="16" Height="16" Stretch="Uniform"/>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Độ khó" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <ComboBox x:Name="cboDifficulty" Style="{StaticResource InnerInputStyle}" SelectedIndex="0">
                                <ComboBoxItem Content="Dễ"/>
                                <ComboBoxItem Content="Trung bình"/>
                                <ComboBoxItem Content="Khó"/>
                            </ComboBox>
                        </Border>
                    </StackPanel>
                </Grid>

                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Nội dung câu hỏi" Style="{StaticResource LabelStyle}"/>
                    <Border Style="{StaticResource InputBorderStyle}" MinHeight="100">
                        <TextBox x:Name="txtContent" Style="{StaticResource InnerInputStyle}" Height="Auto" VerticalContentAlignment="Top" Padding="5" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                    </Border>
                </StackPanel>

                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Nhập đáp án &amp; Chọn câu đúng (Tích ô vuông)" FontSize="16" FontWeight="Bold" Foreground="#111827"/>
                    </StackPanel>

                    <Border Background="White" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,10" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="chkA" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                                </CheckBox.LayoutTransform>
                            </CheckBox>
                            <TextBox x:Name="txtAnsA" Grid.Column="1" Style="{StaticResource InnerInputStyle}" Tag="A"/>
                        </Grid>
                    </Border>
                    <Border Background="White" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,10" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="chkB" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                                </CheckBox.LayoutTransform>
                            </CheckBox>
                            <TextBox x:Name="txtAnsB" Grid.Column="1" Style="{StaticResource InnerInputStyle}" Tag="B"/>
                        </Grid>
                    </Border>
                    <Border Background="White" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,10" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="chkC" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                                </CheckBox.LayoutTransform>
                            </CheckBox>
                            <TextBox x:Name="txtAnsC" Grid.Column="1" Style="{StaticResource InnerInputStyle}" Tag="C"/>
                        </Grid>
                    </Border>
                    <Border Background="White" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,10" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="chkD" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                                </CheckBox.LayoutTransform>
                            </CheckBox>
                            <TextBox x:Name="txtAnsD" Grid.Column="1" Style="{StaticResource InnerInputStyle}" Tag="D"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Padding="20">
            <Button Content="LƯU CÂU HỎI MỚI" Click="BtnSave_Click" Height="45" Background="#16A34A" Foreground="White" FontSize="16" FontWeight="Bold" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#15803D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Border>
    </Grid>
</Window>