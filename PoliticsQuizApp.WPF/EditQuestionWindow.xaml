<Window x:Class="PoliticsQuizApp.WPF.EditQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chỉnh Sửa Câu Hỏi" Height="680" Width="700" 
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI" Background="#F9FAFB">

    <Window.Resources>
        <!-- Style cho Label -->
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Style cho Khung nhập liệu (Input Wrapper) -->
        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Style cho TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Style cho ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Style GỐC cho Placeholder Text -->
        <Style x:Key="PlaceholderTextStyle" TargetType="TextBlock">
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <!-- Mặc định ẩn -->
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer Buttons -->
        </Grid.RowDefinitions>

        <!-- 1. Header Title -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="20">
            <StackPanel Orientation="Horizontal">
                <Path Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z" 
                      Fill="#2563EB" Height="24" Width="24" Stretch="Uniform" Margin="0,0,10,0"/>
                <TextBlock Text="Cập Nhật Câu Hỏi" FontSize="20" FontWeight="Bold" Foreground="#111827" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- 2. Main Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Row 1: Chủ đề & Độ khó -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Chủ đề -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Chủ đề / Chương" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="cboTopics" DisplayMemberPath="TopicName" SelectedValuePath="TopicId" Cursor="Hand"/>
                    </StackPanel>

                    <!-- Độ khó -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Mức độ khó" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="cboDifficulty" Cursor="Hand">
                            <ComboBoxItem Content="Dễ" Tag="1"/>
                            <ComboBoxItem Content="Trung bình" Tag="2"/>
                            <ComboBoxItem Content="Khó" Tag="3"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- Row 2: Nội dung câu hỏi -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Nội dung câu hỏi" Style="{StaticResource LabelStyle}"/>
                    <Border Style="{StaticResource InputBorderStyle}" MinHeight="100">
                        <Grid>
                            <!-- TextBox nhập nội dung -->
                            <TextBox x:Name="txtContent" TextWrapping="Wrap" AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto" Panel.ZIndex="2"/>

                            <!-- Placeholder cho nội dung -->
                            <!-- Đã xóa Style="" ở thẻ mở để tránh lỗi Duplicate Style -->
                            <TextBlock Text="Nhập nội dung câu hỏi tại đây..." Margin="5,5,0,0" VerticalAlignment="Top">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PlaceholderTextStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=txtContent, UpdateSourceTrigger=PropertyChanged}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Row 3: Các đáp án -->
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,16.5L6.5,12L7.91,10.59L11,13.67L16.59,8.09L18,9.5L11,16.5Z" 
                              Fill="#059669" Width="20" Height="20" Margin="0,0,8,0"/>
                        <TextBlock Text="Thiết lập đáp án" FontSize="16" FontWeight="Bold" Foreground="#111827"/>
                        <TextBlock Text="(Chọn đáp án đúng bên trái)" FontSize="13" Foreground="#6B7280" VerticalAlignment="Center" Margin="10,0,0,0" FontStyle="Italic"/>
                    </StackPanel>

                    <!-- Đáp án A -->
                    <Border Background="White" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,10" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="radA" GroupName="Ans" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand">
                                <RadioButton.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </RadioButton.LayoutTransform>
                            </RadioButton>

                            <TextBox x:Name="txtAnsA" Grid.Column="1" Panel.ZIndex="2"/>

                            <!-- Placeholder A -->
                            <TextBlock Grid.Column="1" Text="Nhập đáp án A...">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PlaceholderTextStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=txtAnsA, UpdateSourceTrigger=PropertyChanged}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- Đáp án B -->
                    <Border Background="White" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,10" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="radB" GroupName="Ans" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand">
                                <RadioButton.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </RadioButton.LayoutTransform>
                            </RadioButton>

                            <TextBox x:Name="txtAnsB" Grid.Column="1" Panel.ZIndex="2"/>

                            <!-- Placeholder B -->
                            <TextBlock Grid.Column="1" Text="Nhập đáp án B...">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PlaceholderTextStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=txtAnsB, UpdateSourceTrigger=PropertyChanged}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- Đáp án C -->
                    <Border Background="White" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,10" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="radC" GroupName="Ans" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand">
                                <RadioButton.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </RadioButton.LayoutTransform>
                            </RadioButton>

                            <TextBox x:Name="txtAnsC" Grid.Column="1" Panel.ZIndex="2"/>

                            <!-- Placeholder C -->
                            <TextBlock Grid.Column="1" Text="Nhập đáp án C...">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PlaceholderTextStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=txtAnsC, UpdateSourceTrigger=PropertyChanged}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- Đáp án D -->
                    <Border Background="White" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,0,0,10" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="radD" GroupName="Ans" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand">
                                <RadioButton.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </RadioButton.LayoutTransform>
                            </RadioButton>

                            <TextBox x:Name="txtAnsD" Grid.Column="1" Panel.ZIndex="2"/>

                            <!-- Placeholder D -->
                            <TextBlock Grid.Column="1" Text="Nhập đáp án D...">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PlaceholderTextStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=txtAnsD, UpdateSourceTrigger=PropertyChanged}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- 3. Footer Actions -->
        <Border Grid.Row="2" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Hủy bỏ" Click="BtnCancel_Click" Width="100" Height="40" Margin="0,0,10,0"
                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Foreground="#374151" FontWeight="SemiBold" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Lưu thay đổi" Click="BtnSave_Click" Width="130" Height="40"
                        Background="#2563EB" Foreground="White" FontWeight="Bold" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Path Data="M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z" 
                                          Fill="White" Width="16" Height="16" Margin="0,0,8,0"/>
                                    <ContentPresenter/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>